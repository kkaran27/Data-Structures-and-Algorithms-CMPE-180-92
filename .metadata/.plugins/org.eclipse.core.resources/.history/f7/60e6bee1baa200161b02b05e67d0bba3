#include<iostream>
using namespace std;
int myFunct(int a[], int n);
int main()
{
	int a[6] = {1,2,3,4,5,6};
	myFunct(a, 6);
}
int myFunct(int a[], int n)
{


	   if (n == 1) { return a[0]; }

	   int m = myFunct(a, n - 1);



	   if (a[n] > m) { return a[n - 1]; }

	   else { return m; }


}


